// change heart icon
$("#like_<%= @post.id %>").removeClass('glyphicon-heart').addClass('glyphicon-heart-empty');

// change link
$("#like_<%= @post.id %>").attr("href", "<%= like_post_path @post %>")

// re-render likes information
$("#likes_<%= @post.id %>").html("<%= j render 'posts/likes', post: @post %>");
