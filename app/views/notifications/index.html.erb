<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ul class="notification-index-list" id="notifications">
				<% @notifications.each do |notification| %>
					<%= render 'notification', notification: notification %>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="text-center" id="paginator">
	<%= link_to_next_page @notifications, 'Load More', remote: true, id: 'load_more' %>
</div>
